<div class="wizard">
  <%= form_for @user, url: wizard_path, method: :put do |f| %>
    <legend>Loved one's name</legend>
    <div class="row content">
      <div class="header col-md-12 col-sm-12 col-xs-12">
        <span>What's the name of the loved one you're planning for?</span>
      </div>
      <div class="error col-md-12 col-sm-12 col-xs-12">
        <span></span>
      </div>

      <br>

      <div class="col-md-6 col-sm-6 col-xs-12 text-left">
        <%= f.fields_for :passings, @passing do |b| %>
          <%= b.label :first_name, 'First Name *', class: 'form-label' %><br />
          <%= b.text_field :first_name, id: 'passing_name', class: 'form-control required'%>
          <br>
          <%= b.label :last_name, 'Last Name *', class: 'form-label' %><br />
          <%= b.text_field :last_name, class: 'form-control required' %>
          <br>
        <% end -%>

        <p class="form-label">(*) Mandatory</p>

      </div>
      <div class="col-md-5 col-sm-5 col-sm-offset-1 col-xs-12">
        <aside class="frame">
          <ul>
            <li class="frame-head">
              <div class="center">
                Help!
              </div>
            </li>
            <li class="disc-item">
              we hope to help you in whichever way we can
            </li>
          </ul>

        </aside>
      </div>
    </div>
    <hr>
    <div class="row">
       <div class="col-md-3 pull-left actions">
        <%= link_to "Back", previous_wizard_path, class: 'btn btn-primary' %>
      </div>
      <div class="col-md-3 pull-right actions">
        <%= f.submit "Next", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end -%>
</div>
