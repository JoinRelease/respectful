<div class="row">
  <% if @success %>
    <div class="col-md-6 col-md-offset-3 text-center success">
      <i class="fa fa-4x fa-check"></i>
      <h2> <%= @message %></h2>
      <br />
      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
    </div>
  <% else %>
    <div class="col-md-6 col-md-offset-3 text-center failure">
      <i class="fa fa-4x fa-times"></i>
      <h2> <%= @message %></h2>
      <br />
      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
    </div>
  <% end -%>
</div>
